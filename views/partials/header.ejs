<body class='container'>
    <!--modal-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" name="Fname" id="modLabel">Food name</h2>
            </div>
            <div class="modal-body">
                <form>
                <div>
                    <label for="recipient-name" name="Fdesc" class="col-form-label">Description:</label>
                    <h3 id="foodDescript"></h3>
                </div>
                <div class="form-group">
                    <label for="message-text" name="Freq" class="col-form-label">Special request:</label>
                    <textarea class="form-control" id="message-text"></textarea>
                </div>
                </form>
                
                <h2 id= "foodQt"><button id="sub" onclick="substract()" class="order-qt-sub">-</button><p name = "Fqt" style="display: inline;">0</p><button id="add" onclick="addition()" class="order-qt-add">+</button></h2>
            
                
            </div>
            <div class="modal-footer">
                <button id="closeMod" onclick="closeMod()" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form action="/" method="POST">
                    
                    <button id="submitMod" onclick="submit()" type="button" class="btn btn-primary">Add to order</button>
                </form>
                
            </div>
            </div>
        </div>
    </div>
    <!--content-->
    <div style="margin: 0%;" class = "container-fluid row">
        <div class="col">
            <h1 id="logo">BLT</h1>
        </div>
        <div class="col">
           <form>
            <label id="number">Table no.</label>
            <select name="tableNo" id="sel-number">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
            </select>
        </form>     
        </div>
    </div>